<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.venn.zhufengfm.app.fragments.DiscoverFragment"
              android:orientation="vertical"
		>
	
	<!--标题栏-->

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="5dp"
			>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#f00"
				android:text="喜马拉雅FM"
				android:textSize="25sp"
				android:textStyle="italic"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				/>

		<ImageButton
				android:id="@+id/discover_button_search"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/ic_action_search"
				android:layout_alignParentRight="true"
				/>
	</RelativeLayout>

	<!--Tab栏-->
	<android.support.design.widget.TabLayout
			android:id="@+id/discover_tab_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:tabIndicatorColor="#ff5ba0ff"
			app:tabIndicatorHeight="5dp"
			/>

	<!--内容栏-->

	<android.support.v4.view.ViewPager
			android:id="@+id/discover_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			/>
</LinearLayout>
