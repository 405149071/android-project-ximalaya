<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
		>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:id="@+id/item_dis_rec_eidtor"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="小编推荐"
				android:textSize="20sp"
				android:textColor="#ff3e4fdd"
				android:gravity="center"
				android:layout_alignParentLeft="true"
				/>

		<TextView
				android:id="@+id/item_dis_rec_more"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="更多>"
				android:textSize="15sp"
				android:textColor="#ff5070ff"
				android:gravity="center"
				android:layout_alignParentRight="true"
				/>
	</RelativeLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="2dp"
			>

		<LinearLayout
				android:id="@+id/item_disc_rec_line1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				>

			<ImageButton
					android:id="@+id/item_disc_rec_line1_image"
					android:layout_width="match_parent"
					android:layout_height="90dp"
					android:scaleType="centerInside"
					android:src="@mipmap/ic_launcher"
					/>

			<TextView
					android:id="@+id/item_disc_rec_line1_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="item1"
					android:lines="2"
					android:ellipsize="end"
					/>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/item_disc_rec_line2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:padding="2dp"
				>

			<ImageButton
					android:id="@+id/item_disc_rec_line2_image"
					android:layout_width="match_parent"
					android:layout_height="90dp"
					android:scaleType="centerInside"
					android:src="@mipmap/ic_launcher"
					/>

			<TextView
					android:id="@+id/item_disc_rec_line2_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="item1"
					android:lines="2"
					android:ellipsize="end"
					/>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/item_disc_rec_line3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:padding="2dp"
				>

			<ImageButton
					android:id="@+id/item_disc_rec_line3_image"
					android:layout_width="match_parent"
					android:layout_height="90dp"
					android:scaleType="centerInside"
					android:src="@mipmap/ic_launcher"
					/>

			<TextView
					android:id="@+id/item_disc_rec_line3_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="item1"
					android:lines="2"
					android:ellipsize="end"
					/>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>